<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/start_record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="419dp"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="Comenzar Grabación" />

    <Button
        android:id="@+id/stop_record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_record_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="Detener y Guardar Grabación"
        android:visibility="visible" />

    <Button
        android:id="@+id/custom_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stop_record_button"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="Tu Funcionalidad" />

</RelativeLayout>